/* 提示 s */

.notify {
  position: relative;
  display: block;
  width: 750rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-top: 80rpx;
}

.notify .box {
  width: 100%;
  height: 100%;
  background-color: #fa364a;
  color: #fff;
  padding: 31rpx 0;
}

.notify .box::after {
  content: '';
  position: absolute;
  width: 60rpx;
  height: 50rpx;
  transform: rotate(-80deg) skew(50deg);
  left: 189rpx;
  top: -18rpx;
  z-index: 1;
  background: #fa364a;
}

.notify .box view {
  font-size: 22rpx;
  line-height: 34rpx;
}

.notify .box view:first-child {
  font-size: 34rpx;
  font-weight: 700;
  margin-bottom: 15rpx;
}

