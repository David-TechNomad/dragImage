.swiper {
  display: flex;
  align-items: center;
}

.swiper .iconfont {
  width: 139rpx;
  text-align: center;
  font-size: 40rpx;
}

.swiper swiper {
  flex: 1;
  height: 450rpx;
}

.swiper swiper .swiper-item {
  position: absolute;
  z-index: 2;
  width: 380rpx;
  height: 380rpx;
  border: 14rpx solid #eee;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.swiper swiper .fullImage {
  width: 100%;
  opacity: 0;
  transition: opacity 1s ease;
  position: absolute;
  /* z-index: 10; */
}

.swiper swiper .fullImage.active {
  opacity: 1;
}

.swiper swiper .swiper-item .image {
  position: absolute;
}

.swiper swiper .swiper-item .image > image {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.swiper swiper .swiper-item .image > image:last-child {
  opacity: 0;
  transition: opacity 0.5s ease;
}

.swiper swiper .swiper-item .image > image:last-child.active {
  opacity: 1;
}

